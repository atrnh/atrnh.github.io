{% extends "base.njk" %}

{% macro timestampLink(dt, linkUrl) %}
<time
  datetime="{{ dt.toUTCString() }}"
  class="subtitle is-6 mt-4 mb-0">
  <a href="{{ linkUrl }}">
    {{ dt | displayDate }}
  </a>
</time>
{% endmacro %}

{%- block contentTitle %}
  <header>
    <h2 class="is-subtitle">{{ timestampLink(date, url) }}</h2>
    <h1 class="title is-2 mb-0">{{ title }}</h1>
    <div class="content is-subtitle lead my-2 has-text-grey">
      {{ summary | markdownit | safe }}
    </div>

  </header>
{%- endblock contentTitle %}

{%- block content %}
  <div class="section p-0 my-5">
    <div class="content">
      {{ content | safe }}
    </div>
  </div>
{%- endblock content %}

